<?php
	function table_start(){
		$table='<table border="1" style="border-collapse: collapse;">';
		return $table;
		}
		
	function table_header($array){
		$keys=array_keys($array);
		$table='<tr>';
		foreach($keys as $key) {
				$table.='<th>'.$key.'</th>';
				}
		//coloanele edit si delete		
		//$table.='<th>Edit</th>';
		//$table.='<th>Delete</th>';
		//$table.='</tr>';
		return $table;
		}
		
	function table_row($array){
		$table='<tr>';
		foreach($array as $value){
				$table.='<td>'.$value.'</td>';
		}
		//coloanele edit si delete
		//$id=$array['id'];
		//$edit_link='<a href="create_user.php?id='.$id.'">Edit</a>';	
		//$table.='<td>'.$edit_link.'</td>';
		//$delete_link='<a href="delete_user.php?id='.$id.'">Delete</a>';	
		//$table.='<td>'.$delete_link.'</td>';
		$table.='</tr>';
		return $table;
		}
		
	function table_end(){
		return '</table>';
		}
	
?>